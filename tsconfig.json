{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["chrome", "firefox-webext-browser"],
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./src/core/*"],
      "@/features/*": ["./src/features/*"],
      "@/pages/*": ["./src/pages/*"]
    }
  },
  "include": ["src/**/*", ".wxt/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", ".output", "chrome_sources", "firefox_sources"]
}
