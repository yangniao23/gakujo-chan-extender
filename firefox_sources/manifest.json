{
  "manifest_version": 2,
  "name": "More-Better-Gakujo",
  "version": "0.63",

  "description": "学情の不便を多少解消するかもしれない新大生用拡張機能",

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "{7706c5ac-9439-477b-b748-7a4a4a7ef902}"
    }
  },

  "background": {
    "scripts": ["backGround.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "https://gakujo.iess.niigata-u.ac.jp/campusweb/campusportal.do*"
      ],
      "all_frames": true,
      "js": ["autoExtender.js", "verShow.js"]
    },
    {
      "matches": [
        "https://gakujo.iess.niigata-u.ac.jp/campusweb/campusportal.do?*tabId=en"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["reportSorter.js"]
    },
    {
      "matches": [
        "https://gakujo.iess.niigata-u.ac.jp/campusweb/campusportal.do?*tabId=kj"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["messageReader.js"]
    },
    {
      "matches": [
        "https://gakujo.iess.niigata-u.ac.jp/campusweb/campusportal.do?*tabId=si"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["gpaSolver.js"]
    },
    {
      "matches": [
        "https://gakujo.iess.niigata-u.ac.jp/campusweb/campusportal.do*"
      ],
      "all_frames": true,
      "js": ["2FA-module.js", "2FA.js"]
    }
  ]
}
